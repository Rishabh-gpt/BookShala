<%- include ('../partials/header') %>
  
    <div class="container">
        <header class="jumbotron">
            <div>
                 <h1> This is the campgrounds page<h1> 
           <p>Campgounds from all over india</p>
            <p><a class="btn btn-primary" href="/campgrounds/new">Add new</a></p>
            
            </div> 
          
        </header>
        
       <div class="row text-center" style="display:flex;flex-wrap:wrap;">
               <%campgrounds.forEach(function(campground){%>
        
                     <div class="col-md-4 col-sm-6">
                         <div class="img-thumbnail img-fluid" >
                             <img src="<%=campground.image%>" class="img-fluid" alt="Responsive image">
                            <div clas="caption">
                                <h4><%=campground.name%></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                            </p>
                         </div>
                          
                           
                     </div>
        
         <% }); %>
       </div>
       
    </div>

 <%- include ('../partials/footer') %>